FROM ubuntu:20.04

ENV DEBIAN_FRONTEND noninteractive

RUN apt-get update && apt-get -y install make g++ libsctp-dev lksctp-tools git vim iproute2 iptables net-tools ifupdown iputils-ping wget libssl-dev

RUN /bin/sh -c version=3.20 && build=0 && mkdir ~/temp && cd ~/temp && wget https://cmake.org/files/v$version/cmake-$version.$build.tar.gz && tar -xzvf cmake-$version.$build.tar.gz && cd cmake-$version.$build/ &&  ./bootstrap &&  make -j`nproc` &&  make install && ldconfig && cmake --version

RUN /bin/sh -c git clone https://github.com/aligungr/UERANSIM && cd UERANSIM && make

WORKDIR /UERANSIM/build

CMD ["/bin/sh" "-c" "/mnt/ueransim/ueransim_init.sh &&  ./nr-gnb -c ../config/free5GC-gnb.yaml & bash"]


